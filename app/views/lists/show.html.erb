<div class="list-banner">
  <h1><%= @list.name %></h1>
    <p>I heckin love <%= @list.name.downcase %> movies</p>
    <%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
    <%= link_to "Back", lists_path %>
</div>
<div class="container">
  <div class="show-grid">
    <% @bookmarks.each do |bookmark| %>
      <div class="list-card">
        <p><%= bookmark.movie.title %> - Rating: <%= bookmark.movie.rating %></p>
        <%= image_tag bookmark.movie.poster_url, alt: "Movie Poster", width: 200 %>
        <p>Overview: <%= bookmark.movie.overview %></p>
        <p>Comment: <%= bookmark.comment %></p>
        <p><%= link_to "delete bookmark", bookmark_path(bookmark), method: :delete %></p>
      </div>
    <% end %>
  </div>
</div>
