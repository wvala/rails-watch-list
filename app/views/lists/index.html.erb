<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Will's movie list</h1>
    <p>Feel free to add your own list!</p>
    <%= link_to "Create a new list", new_list_path class: %w[btn btn-lrg]%>
  </div>
</div>
<div class="container">
  <ul>
    <% @lists.each do |list| %>
    <li><%= link_to list.name, list %></li>
    <% end %>
  </ul>
</div>
